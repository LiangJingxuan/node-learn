<!DOCTYPE html>
<html lang="zh-CN">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <meta name="author" content="">
    <title>班级说说</title>
    <link href="/css/bootstrap.min.css" rel="stylesheet">
    <link href="/css/jumbotron.css" rel="stylesheet">
</head>
<body>

<% include header.ejs %>

<!-- Main jumbotron for a primary marketing message or call to action -->
<div class="jumbotron">
    <% if(!login){ %>
    <div class="container">
        <div class="row">
            <div class="col-lg-6">
                <h1>
                    欢迎!
                </h1>
                <p>班级说说是我们的交流园地，欢迎注册！</p>
                <p><a class="btn btn-primary btn-lg" href="/register" role="button">注册 &raquo;</a></p>
            </div>
            <div class="col-lg-6">
                <p>已有账号登录</p>
                <form>
                    <div class="form-group">
                        <label for="username">用户名</label>
                        <input type="text" class="form-control" id="username" placeholder="用户名">
                    </div>
                    <div class="form-group">
                        <label for="password">密码</label>
                        <input type="password" class="form-control" id="password" placeholder="密码">
                    </div>
                    <button type="button" class="btn btn-default" id="login">登录</button>
                </form>
            </div>
        </div>
    </div>
    <% }else{ %>
    <div class="container">
        <div class="row">
            <div class="col-lg-2">
                <a href="/setavatar"><img src="/avatar/<%=avatar%>"></a>
            </div>
            <div class="col-lg-6">
                <p><%=username%></p>
                <textarea class="form-control" name="postMsg" id="postMsg" cols="80" rows="3"></textarea>
                <button id="postAct" type="button" class="btn btn-primary btn-sm" style="margin: 15px 0;float: right;">发表说说 &raquo;</button>
            </div>
        </div>
    </div>
    <% } %>
</div>

<div class="container">
    <!-- Example row of columns -->
    <div class="row" id="postBox">

    </div>

    <hr>

    <footer>
        <p>&copy; 2016 Company, Inc.</p>
    </footer>
</div> <!-- /container -->

<script src="/js/jquery.min.js"></script>
<script src="/js/bootstrap.min.js"></script>
<script>
    // 登录操作
    $('#login').click(function(){
        $.post('/doLogin',{
            username: $('#username').val(),
            password: $('#password').val()
        },function(result){
            if(result==='1'){
                // 登录成功
                alert('登录成功!');
                location.reload();
            }else if(result==='-1'){
                // 用户不存在
                alert('用户不存在！');
            }else if(result==='-2'){
                // 密码错误
                alert('密码错误！');
            }else{
                // 服务器错误
                alert('服务器错误！');
            }
        });
    });

    // 发布说说
    $('#postAct').click(function(){
        $.post('/post',{
            content: $('#postMsg').val()
        },function(result){
            if(result==='1'){
                // 登录成功
                alert('发布成功!');
                location.reload();
            }else{
                // 服务器错误
                alert('服务器错误！');
            }
        });
    });

    // 说说查询
    $.ajax({
        url: '/getAllPost',
        data: {page: 0},
        type: 'GET',
        dataType: 'JSON',
        success: function(result){
            var p='';

            // 迭代器获取用户信息
            (function iterator(i){
                if(i===result.length){
                    return false; // 停止迭代器
                }
                $.ajax({
                    url: '/getUserInfo',
                    data: {username: result[i].username},
                    type: 'GET',
                    dataType: 'JSON',
                    async: false,
                    success: function(info){
                        result[i].avatar=info.avatar;
                        p+=
                            '<div class="col-md-4">\n' +
                            '    <h2><img style="width: 50px;margin-right: 5px;border-radius: 50%;" src="/avatar/'+result[i].avatar+'" alt="">'+result[i].username+' 说：</h2>\n' +
                            '    <p>'+result[i].content+'</p>\n' +
                            '    <p>'+result[i].date+'</p>\n' +
                            '    <p><a class="btn btn-default" href="#" role="button">查看详情 &raquo;</a></p>\n' +
                            '</div>';

                        // 调用迭代器
                        iterator(i+1);
                    }
                });
            })(0);
            $('#postBox').html(p);
        }
    });
</script>
</body>
</html>
