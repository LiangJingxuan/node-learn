<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>登陆</title>
</head>
<body>
<form>
    账户：<input type="text" id="user"> <br><br>
    密码：<input type="password" id="password"> <br><br>
    <button type="button" id="loginAct">登陆</button>
</form>
<script src="./jquery-1.11.3.min.js"></script>
<script>
    // 注册操作
    $('#loginAct').click(function(){
        $.ajax({
            url: '/doLogin',
            method: 'POST',
            dataType: 'json',
            data: {
                user: $('#user').val(),
                password: $('#password').val()
            },
            success: function(res){
                if(res===1){
                    alert('登陆成功！');
                }else if(res===0){
                    alert('用户不存在！');
                }else{
                    alert('密码错误，请重试！')
                }
            }
        });
    });
</script>
</body>
</html>